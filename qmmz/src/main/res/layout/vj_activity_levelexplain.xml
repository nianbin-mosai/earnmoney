<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vj_content_bg"
    android:orientation="vertical" >

    <include layout="@layout/vj_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/level_explain"
            style="@style/vj_level_text_black"
            android:text="等级说明"
            android:background="@drawable/vj_level_white" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/experience_explain"
            style="@style/vj_level_text_gray"
            android:text="经验值说明" 
            android:background="@drawable/vj_level_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_value"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:background="#FFF" >

        <ListView
            android:id="@+id/listview"
            android:dividerHeight="2dp"
            android:divider="@color/vj_content_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/empirical_value"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFF"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="经验值奖励规则"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_0"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_0"
                        android:text="+100" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="每个任务转发（通过审核）" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="每个转发任务好友浏览数" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_1"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_1"
                        android:text="+2" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="1个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_2"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_2"
                        android:text="+4" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="2个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_3"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_3"
                        android:text="+8" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="3个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_4"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_4"
                        android:text="+16" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="4个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_5"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_5"
                        android:text="+32" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="5个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_6"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_6"
                        android:text="+64" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="6个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_7"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_7"
                        android:text="+128" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="7个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_8"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_8"
                        android:text="+256" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="8个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_9"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_9"
                        android:text="+512" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="9个浏览" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/experience_10"
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_alignParentRight="true"
                        android:text="经验" />

                    <TextView
                        style="@style/vj_level_text_mediuml_blue"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/experience_10"
                        android:text="+1024" />

                    <TextView
                        style="@style/vj_level_text_mediuml_black"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="120dp"
                        android:text="10个以上浏览" />
                </RelativeLayout>

                <TextView
                    style="@style/vj_level_text_mediuml_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:text="提示：转发任务好友浏览越多，经验值越高，升级越快，而用户等级越高，可做任务越多，奖励越高。" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:background="@color/vj_content_bg" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="经验值扣除规则"
                    android:textSize="18sp" />

                <TextView
                    style="@style/vj_level_text_mediuml_black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:lineSpacingExtra="8dp"
                    android:text="1.审核发现微信号提交错误或转发任务后立即删除，会扣除部分经验值；" />

                <TextView
                    style="@style/vj_level_text_mediuml_black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text="2.系统检测到有作弊行为，一律清除经验值；" />

                <TextView
                    style="@style/vj_level_text_mediuml_black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="8dp"
                    android:text="3.更换设备或转发的微信号，可能会导致用户ID变动，经验值也会归零。" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>