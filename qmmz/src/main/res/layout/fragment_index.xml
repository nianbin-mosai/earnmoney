<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/gray">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/titlebar_color">

        <TextView
            android:id="@+id/textView1"
            android:text="首页"
            style="@style/text_test"/>
    </RelativeLayout>
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llyt_schoolship"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ic_schoolship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="校友连线"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llyt_teacher_student"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ic_teacher_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="师生交谈"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llyt_school_forum"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ic_school_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="校园论坛"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View android:layout_height="match_parent"
                      android:background="@color/titlebar_color"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"
                    android:layout_width="2dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="校园活动"/>
            </LinearLayout>

            <TextView
                android:textSize="12sp"
                android:padding="5dp"
                android:ellipsize="end"
                android:text="@string/test"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:padding="5dp"
                android:text="进入全文"
                android:gravity="right"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/jinru"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View android:layout_height="match_parent"
                      android:background="@color/titlebar_color"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"
                      android:layout_width="2dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="学生社团"/>

            </LinearLayout>
            <com.mdxx.qmmz.newfeature.view.FlowLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="学生会"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:text="校园电视台"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:text="团委"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:text="吉他社"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:text="跆拳道"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/red"
                          android:text="更多"/>
            </com.mdxx.qmmz.newfeature.view.FlowLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:drawableRight="@drawable/jinru"
                android:textSize="20sp"
                android:text="就业招聘会"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            </LinearLayout>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>


        <LinearLayout
            android:layout_weight="1"
            android:background="@color/drak_red"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </LinearLayout>
        </LinearLayout>
</LinearLayout>