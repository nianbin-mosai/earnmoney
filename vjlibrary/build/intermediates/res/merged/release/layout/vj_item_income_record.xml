<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/vj_white"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#F5B081"
            android:textSize="@dimen/vj_text_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            android:lines="2"
            android:text=""
            android:textColor="@color/vj_textblack" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="2016-07-25"
            android:textColor="@color/vj_textgrayno"
            android:textSize="@dimen/vj_text_medium" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="12:57:20"
            android:textColor="@color/vj_textgrayno" />
    </LinearLayout>


    <TextView
        android:id="@+id/rev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="奖励"
        android:textColor="@color/vj_textred"
        android:textSize="@dimen/vj_text_medium" />
</LinearLayout>