<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vj_white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/vj_head" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/vj_blue"
                    android:orientation="vertical"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/userid"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" >

                        <TextView
                            android:id="@+id/level_explain"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vj_white_bg"
                            android:gravity="center"
                            android:text="等级说明"
                            android:textColor="@color/vj_blue"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_toLeftOf="@+id/level_explain"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <View
                                android:id="@+id/level_center_line"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_above="@+id/level_center_line"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="当前用户等级"
                                    android:textColor="#ddffffff"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/lv"
                                    android:layout_width="33dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="right"
                                    android:text="Lv0"
                                    android:textColor="#ffffffff"
                                    android:textSize="13dp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/exp_reward_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#ddffffff"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_below="@+id/level_center_line"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="任务经验值"
                                    android:textColor="#ddffffff"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/exp"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="#ffffffff"
                                    android:textSize="13dp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/next_lv_exp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#ddffffff"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/rev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="收益明细"
                        android:textColor="#515151"
                        android:textSize="15sp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/info"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/vj_myincome_info" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/vj_qdi_line_bg" />
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="任务名称"
                    android:textSize="@dimen/vj_text_medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vj_qdi_line_bg" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textSize="@dimen/vj_text_medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vj_qdi_line_bg" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="奖励"
                    android:textSize="@dimen/vj_text_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/vj_qdi_line_bg" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                
                <com.fingermobi.vj.view.ListViewForScrollView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:scrollbars="none" >
                </com.fingermobi.vj.view.ListViewForScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/blurbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:background="#ddffffff"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:background="@drawable/vj_showcenter_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="转发记录说明"
                android:textColor="#4f4f4f"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="13dp"
                android:layout_marginTop="16dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vj_close" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/close"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/vj_blue_line_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="5dp"
                    android:text="完成转发任务后，转发收益显示“待审核”，此时转发收益还没有到账，只有在任务周期内完成3次以上的好友浏览，转发收益才会确认有效。"
                    android:textColor="#4f4f4f"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>