<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vj_content_bg" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/vj_white" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="完善个人资料"
            android:textSize="18dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/vj_white"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="请在转发任务前完善以下的个人资料信息，以便系统能完成您的转发任务审核，并提供更适合您的转发任务。"
                android:textSize="@dimen/vj_text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="1dp"
                android:background="@color/vj_white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="微信号："
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/wxhao"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vj_content_bar_bg"
                        android:hint="请输入微信号"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/vj_textblack"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/search"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/vj_content_bar_bg"
                        android:gravity="center"
                        android:text="查看说明"
                        android:textSize="12dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:text="在微信隐私设置中请开启“允许陌生人查看十张照片”"
                    android:textColor="@color/vj_qdi_line_bg"
                    android:textSize="10dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/vj_white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="微信好友数："
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vj_content_bar_bg" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/vj_arrays_bottom" />

                    <Spinner
                        android:id="@+id/spnum"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
`
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/vj_white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="年龄："
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vj_content_bar_bg" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/vj_arrays_bottom" />

                    <Spinner
                        android:id="@+id/spage"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
`
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/vj_white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="性别："
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vj_content_bar_bg" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/vj_arrays_bottom" />

                    <Spinner
                        android:id="@+id/spsex"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:background="@null"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/vj_white"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="兴趣："
                    android:textSize="12dp" />

                <com.fingermobi.vj.view.MyGridView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:columnWidth="70dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vj_blue_bg"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/vj_white"
                        android:textSize="@dimen/vj_text_large" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/vj_blue_bg"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/vj_white"
                        android:textSize="@dimen/vj_text_large" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/head"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/searchimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vj_searchimg" />
    </ScrollView>

</RelativeLayout>