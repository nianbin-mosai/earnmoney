<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="mid" />

            <EditText
                android:id="@+id/mid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3db531c723749a80de2d3686951fbf25" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gameid" />

            <EditText
                android:id="@+id/gameid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gameid" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="adType" />

            <EditText
                android:id="@+id/adType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="footerDisplay" />

            <EditText
                android:id="@+id/footerDisplay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示广告" />

            <Button
                android:id="@+id/send1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示json" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="mid" />

            <EditText
                android:id="@+id/mid1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3db531c723749a80de2d3686951fbf25" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gameid" />

            <EditText
                android:id="@+id/gameid1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gameid" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="adType" />

            <EditText
                android:id="@+id/adType1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/send2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示广告2" />

            <TextView
                android:id="@+id/backjson"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>