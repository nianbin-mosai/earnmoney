<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="35dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/info_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2.5dp"
        android:background="@drawable/vj_process_num_bg"
        android:gravity="center"
        android:textColor="@color/vj_white" />

    <TextView
        android:id="@+id/info_right"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/vj_task_blue_bg"
        android:gravity="center"
        android:text="+25"
        android:layout_centerVertical="true"
        android:textColor="@color/vj_white"
        android:textSize="14sp" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/info_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/info_right"
        android:layout_toRightOf="@+id/info_left"
        android:text="按打款"
        android:textColor="@color/vj_textgray"
        android:textSize="14sp" />

</RelativeLayout>
