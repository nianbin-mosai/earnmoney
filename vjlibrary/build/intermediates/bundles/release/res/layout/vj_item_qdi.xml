<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vj_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/taska"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vj_white"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/taska_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用任务"
                android:textColor="@color/vj_textblack"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="个人专属限时体验  任务多奖金高"
                android:textColor="@color/vj_textgray"
                android:textSize="10sp" />
        </LinearLayout>

        <include
            android:id="@+id/taska_centerline"
            layout="@layout/vj_view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/taska_top" />

        <LinearLayout
            android:id="@+id/taska_center_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/taska_centerline"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/taska_center"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:background="#fff">

                    <ImageView
                        android:id="@+id/taska_headimg"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <LinearLayout
                        android:id="@+id/taska_tag"
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent">

                            <View
                                android:id="@+id/right_cercen"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/taska_anzhuang"
                                android:layout_width="70dp"
                                android:layout_height="24dp"
                                android:layout_above="@+id/right_cercen"
                                android:layout_marginBottom="-10dp"
                                android:background="@drawable/vj_yzm_bg"
                                android:gravity="center"
                                android:text="安装"
                                android:textColor="@color/vj_blue" />

                            <TextView
                                android:id="@+id/taska_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/right_cercen"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:text="+0.00元"
                                android:textColor="@color/vj_textred"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/taska_tagline"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/taska_tag"
                        android:background="@color/vj_greyline" />

                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/taska_tagline"
                        android:layout_toRightOf="@+id/taska_headimg"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp">


                            <TextView
                                android:id="@+id/taska_tv_filesize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:ellipsize="none"
                                android:singleLine="true"
                                android:text="0.00M"
                                android:textColor="@color/vj_textgray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/taska_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="3dp"
                                android:layout_toLeftOf="@+id/taska_tv_filesize"
                                android:ellipsize="none"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/vj_textblack"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/taska_tv_info1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/vj_textgrayno"
                            android:singleLine="true"
                        android:ellipsize="end"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/taska_tv_info2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                        android:ellipsize="end"
                            android:textColor="@color/vj_textgrayno"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/taska_itembg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/taska_center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="下载用户:" />

                            <TextView
                                android:id="@+id/taska_downloadednu"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textSize="@dimen/vj_text_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余次数:" />

                            <TextView
                                android:id="@+id/taska_overtasknu"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textSize="@dimen/vj_text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/taska_yqw"
            android:layout_width="82dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/vj_item_task_jie"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/taska_more"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/taska_center_item"
            android:orientation="vertical"
            android:visibility="visible">

            <include layout="@layout/vj_view_line" />

            <TextView
                android:id="@+id/taska_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="加载更多"
                android:textSize="16sp"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/taska_progressbar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"></ProgressBar>

            <include layout="@layout/vj_view_line" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/taski"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vj_white"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/taski_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转发任务"
                android:textColor="@color/vj_textblack"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="分享任务即赢取多重奖励"
                android:textColor="@color/vj_textgray"
                android:textSize="10sp" />
        </LinearLayout>

        <include
            android:id="@+id/taski_centerline"
            layout="@layout/vj_view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/taski_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/taski_centerline"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/taski_headimg"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <LinearLayout
                        android:id="@+id/taski_state_l"
                        android:layout_width="58dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/taski_stateimg"
                            android:layout_width="58dp"
                            android:layout_height="26dp"
                            android:src="@drawable/vj_item_task_jin"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/taski_notext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:textColor="#515151"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/taski_increment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:textColor="@color/vj_blue"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="奖励"
                                android:textColor="#515151"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/taski_title"
                        style="@style/vj_task_text_mediuml"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/taski_state_l"
                        android:layout_toRightOf="@+id/taski_headimg"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:lines="2" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/taski_itembg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        
                        
						<LinearLayout
                            android:id="@+id/taski_linear_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginRight="-10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/vj_task_text_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="浏览奖励:" />

                                <TextView
                                    android:id="@+id/taski_time_award"
                                    style="@style/vj_task_text_mediuml"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:text="0.00"
                                    android:textColor="@color/vj_textred"
                                    android:textSize="@dimen/vj_text_medium" />

                                <TextView
                                    android:id="@+id/taski_time_award_unit"
                                    style="@style/vj_task_text_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="元/次" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/vj_task_text_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最高收益:" />

                                <TextView
                                    android:id="@+id/taski_time_AdhightastReword"
                                    style="@style/vj_task_text_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:text="0.00"
                                    android:textColor="@color/vj_textred"
                                    android:textSize="@dimen/vj_text_medium" />

                                <TextView
                                    android:id="@+id/taski_time_AdhightastReword_unit"
                                    style="@style/vj_task_text_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="元" />
                            </LinearLayout>
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_marginRight="-10dp"
                            android:id="@+id/taski_linear_reveune"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="有效转发:" />

                            <TextView
                                android:id="@+id/taski_reveune"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="0.00"
                                android:textColor="@color/vj_textred"
                                android:textSize="@dimen/vj_text_medium" />
							<TextView
                                android:id="@+id/taski_unit_reveune"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="好友浏览:" />

                            <TextView
                                android:id="@+id/taski_reward"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="0.00"
                                android:textColor="@color/vj_textred"
                                android:textSize="@dimen/vj_text_medium" />

                            <TextView
                                android:id="@+id/taski_unit"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元/次" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginRight="-10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="参与人数:" />

                            <TextView
                                android:id="@+id/taski_browser_times"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textSize="@dimen/vj_text_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余次数:" />

                            <TextView
                                android:id="@+id/taski_left_times"
                                style="@style/vj_task_text_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="0"
                                android:textSize="@dimen/vj_text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/taski_yqw"
            android:layout_width="82dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/vj_item_task_jie"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>


