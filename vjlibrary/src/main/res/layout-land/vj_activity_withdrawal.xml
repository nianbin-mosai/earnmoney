<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vj_content_bg"
    android:orientation="vertical">

    <include layout="@layout/vj_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@color/vj_blue"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:text="我的余额"
                    android:textColor="#ddffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/curcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="我的余额"
                    android:textColor="#fff"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/rawalrecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="兑换记录 >"
                    android:textColor="#fff"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/vj_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/r_q"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/qqimg"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_qq" />

                    <TextView
                        android:id="@+id/qbi"
                        style="@style/vj_withdrawal_text_mediuml_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:layout_toRightOf="@+id/qqimg"
                        android:text="Q币" />

                    <TextView
                        style="@style/vj_withdrawal_text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/qbi"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/qbi"
                        android:text="Q币直充立即到账" />

                    <ImageView
                        android:id="@+id/array_right"
                        android:layout_width="25dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_arrow_right" />

                    <TextView
                        android:id="@+id/qqmoney"
                        style="@style/vj_withdrawal_text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/array_right"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#b4b4b4" />

                <RelativeLayout
                    android:id="@+id/r_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/alipayimg"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_alipay" />

                    <TextView
                        android:id="@+id/alipay"
                        style="@style/vj_withdrawal_text_mediuml_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:layout_toRightOf="@+id/alipayimg"
                        android:text="支付宝充值" />

                    <TextView
                        style="@style/vj_withdrawal_text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/alipay"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/alipay"
                        android:text="直接提现，快速安全" />

                    <ImageView
                        android:id="@+id/alipay_array_right"
                        android:layout_width="25dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_arrow_right" />

                    <TextView
                        android:id="@+id/alipaymoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/alipay_array_right"
                        android:textColor="#858585"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#b4b4b4" />

                <RelativeLayout
                    android:id="@+id/r_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/phoneimg"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_phone" />

                    <TextView
                        android:id="@+id/phone"
                        style="@style/vj_withdrawal_text_mediuml_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:layout_toRightOf="@+id/phoneimg"
                        android:text="手机话费" />

                    <TextView
                        style="@style/vj_withdrawal_text_small_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/phone"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/phone"
                        android:text="全网话费充值，快速到账" />

                    <ImageView
                        android:id="@+id/phone_array_right"
                        android:layout_width="25dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/vj_arrow_right" />

                    <TextView
                        android:id="@+id/phonemoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/phone_array_right"
                        android:textColor="#858585"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
