<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="vj_AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="vj_falemeTheme" parent="android:Theme.Holo.Light.NoActionBar"></style>

    <declare-styleable name="vj_PullListView">
        <attr name="getMoreType">
            <enum name="auto" value="0" />
            <enum name="click" value="1" />
        </attr>
        <attr name="addPullHeaderByUser" format="boolean" />
    </declare-styleable>

    <style name="vj_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="vj_qdi_text_mediuml">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2E2E2E</item>
    </style>

    <style name="vj_qdi_text_small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#515151</item>
    </style>

    <style name="vj_qdi_text_large">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2F2F2F</item>
    </style>

    <style name="vj_task_text_small">
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="vj_task_text_mediuml">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2A2A2A</item>
    </style>

    <style name="vj_myincome_text_mediuml_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_black_medium</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="vj_myincome_text_mediuml_blue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_blue</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="vj_myincome_text_small_blue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/vj_blue</item>
    </style>

    <style name="vj_myincome_text_small_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/vj_black_small</item>
    </style>

    <style name="vj_withdrawal_text_small_black">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#858585</item>
    </style>

    <style name="vj_withdrawal_text_mediuml_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="vj_level_text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_textgray</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="vj_level_text_gray">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_textgrayno</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="vj_level_text_mediuml_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_textgray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="vj_level_text_mediuml_blue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/vj_blue</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>